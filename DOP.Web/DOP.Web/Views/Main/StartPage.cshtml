@model DOP.Web.ViewModels.StartPageViewModel
@{
    ViewBag.Title = "StartPage";
}
<div class="container navbar-fixed-top" style="width: 10vw;margin-left:0;top:inherit">
    <div class="list-group">
        @{
            foreach (var item in Model.Departments)
            {
                if (Model.SelectedDepartment == item.DepartmentId)
                {<a href='@Url.Action("StartPage", "Main", new { id = item.DepartmentId })' ; class="list-group-item active">@item.Name</a> }
                else
                {<a href='@Url.Action("StartPage", "Main", new { id = item.DepartmentId })' ; class="list-group-item">@item.Name</a> }
            }
        }
    </div>
</div>
<table border="1" width="100%" cellpadding="5">
    @{
        if (Model.SelectedDepartment == null)
        {
            <caption>All personnel</caption>
        }
    }
    <tr>
        <th>Name</th>
        <th>Last Name</th>
        <th>Middle Name</th>        
    </tr>
    @{ foreach (var item in Model.Personnel)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.MiddleName</td>
                <td>@Html.ActionLink("Details","PersonnelDetails","Main",routeValues:new { PersonnelId=item.PersonnelId }, htmlAttributes:null)</td>
            </tr>
        }
    }
</table>




